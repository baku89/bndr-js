{
	"compilerOptions": {
		"target": "es2022",
		"module": "ESNext",
		"strict": true,
		"allowJs": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"inlineSourceMap": true,
		"baseUrl": ".",
		"outDir": "lib",
		"isolatedModules": true,
		"declaration": true,
		"downlevelIteration": true,
		"lib": ["esnext", "DOM"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"paths": {
			"Bndr": ["src"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
