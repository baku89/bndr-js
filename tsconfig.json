{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"strict": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"declaration": true,
		"declarationMap": true,

		/* Bundler mode */
		"baseUrl": ".",
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"outDir": "./lib",

		"lib": ["ES2022", "DOM"]
	},
	"include": ["src"]
}
